mixin element(data)
	each item in data
		+b.element
			+b.__top.top__
				+b.P.__social.social__
					+e.download= item.download
					+e.like= item.like
				+e.IMG(src= 'images/' + item.img, alt="#").img
			+b.__bottom.bottom__
				+e.A(href= item.url).title= item.linkTitle
				+e.P.date= item.date
				+e.P.description= item.desc
				
